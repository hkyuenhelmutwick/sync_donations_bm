<Window x:Class="sync_donations_bm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:sync_donations_bm"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="FilePathTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="500" Height="30" Margin="10"/>
        <Button Content="Browse" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="30" Margin="520,10,0,0" Click="BrowseButton_Click"/>
        <Button Content="Synchronize" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="30" Margin="630,10,0,0" Click="SynchronizeButton_Click"/>
    </Grid>
</Window>
