<Window x:Class="sync_donations_bm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:sync_donations_bm"
        mc:Ignorable="d"
        Title="同步成員金額" Height="450" Width="800">
    <Grid>
        <TabControl x:Name="MainTabControl">
            <!-- First tab for event file path input -->
            <TabItem Header="活動文件薄路徑">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <DataGrid x:Name="EventsDataGrid" Grid.Row="0" Grid.ColumnSpan="4" AutoGenerateColumns="False" ItemsSource="{Binding Events}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0">
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Header="活動文件薄路徑" Width="*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBox Text="{Binding EventFile, UpdateSourceTrigger=PropertyChanged}" Grid.Column="0" Margin="0,0,5,0"/>
                                            <Button Content="瀏覽" Grid.Column="1" Width="75" Click="BrowseEventFileButton_Click"/>
                                            <Button Content="移除" Grid.Column="2" Width="75" Click="RemoveEventFileButton_Click"/>
                                        </Grid>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <TextBox x:Name="FilePathTextBox" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="30" Margin="10"/>
                    <Button x:Name="BrowseButton" Content="瀏覽總薄" Grid.Row="1" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="30" Margin="0,10,0,0" Click="BrowseButton_Click"/>
                    <Button Content="同步成員金額" Grid.Row="1" Grid.Column="3" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Height="30" Margin="10,10,0,0" Click="SynchronizeButton_Click"/>
                </Grid>
            </TabItem>
            <!-- Second tab for displaying log messages -->
            <TabItem Header="Log">
                <Grid>
                    <ListBox x:Name="LogMessagesListBox" ItemsSource="{Binding LogMessages}" />
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
